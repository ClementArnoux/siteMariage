  src: url('/fonts/CormorantGaramond-VariableFont_wght.ttf') format('truetype-variations');
  font-weight: 300 600;
  font-style: normal;
  font-display: block;
}

@font-face {
  font-family: 'Cormorant Garamond';
  src: url('/fonts/CormorantGaramond-Italic-VariableFont_wght.ttf') format('truetype-variations');
  font-weight: 300 600;
  font-style: italic;
  font-display: block;
}

@font-face {
  font-family: 'Adobe Garamond Pro';
  src: url('/fonts/AGaramondPro-Regular.otf') format('opentype');
  font-weight: 400;
  font-style: normal;
  font-display: block;
}

@font-face {
  font-family: 'Adobe Garamond Pro';
  src: url('/fonts/AGaramondPro-Bold.otf') format('opentype');
  font-weight: 700;
  font-style: normal;
  font-display: block;
}

@font-face {
  font-family: 'Adobe Garamond Pro';
  src: url('/fonts/AGaramondPro-Italic.otf') format('opentype');
  font-weight: 400;
  font-style: italic;
  font-display: block;
}

@font-face {
  font-family: 'Adobe Garamond Pro';
  src: url('/fonts/AGaramondPro-BoldItalic.otf') format('opentype');
  font-weight: 700;
  font-style: italic;
  font-display: block;
}

@font-face {
  font-family: 'Orpheus';
  src: url('/fonts/Orpheus.ttf') format('truetype');
  font-weight: 400;
  font-style: normal;
  font-display: block;
}

@font-face {
  font-family: 'Orpheus Pro';
  src: url('/fonts/Orpheus-Pro.otf') format('opentype');
  font-weight: 400;
  font-style: normal;
  font-display: block;
}

// Variables
:root {
  --border-color: #e8e6e3;
}

// Reset
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Adobe Garamond Pro';
  font-weight: 300;
  line-height: 1.7;
  color: black;
  background-color: rgb(223, 224, 225);
  position: relative;
}

// Global background overlay
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.1));
  pointer-events: none;
  z-index: 1;
}

// Header
.header {
  background: transparent;
  padding: 32px 0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  transition: all 0.3s ease;
  font-family: 'Adobe Garamond Pro';
  
  &--scrolled {
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(10px);
    padding: 24px 0;
  }

  &__container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 32px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  &__nav {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  &__link {
    text-decoration: none;
    color: white;
    font-weight: 500;
    font-size: 20px;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    position: relative;
    
    &::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: white;
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }
    
    &:hover::after {
      transform: scaleX(1);
    }
    
    &--active::after {
      transform: scaleX(1);
    }
  }

  &__language {
    display: flex;
    gap: 5px;
    justify-content: end;
  }

  &__lang-btn {
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    padding: 5px 8px;
    border-radius: 2px;
    font-size: 11px;
    font-weight: 400;
    letter-spacing: 0.3px;
    cursor: pointer;
    transition: all 0.3s ease;
    
    &:hover {
      color: white;
    }
    
    &--active {
      color: white;
      font-weight: 500;
    }
  }

  &__couple {
    font-family: 'Adobe Garamond Pro';
    font-size: 24px;
    font-weight: 400;
    color: white;
    letter-spacing: 2px;
    line-height: 1;
    text-align: center;
  }
}

// Main container
.main {
  margin-top: 0;
}

// Hero sections for all pages
.hero {
  min-height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 128px 32px 80px;
  background-size: cover;
  background-position: center;
  
  h1 {
    font-size: 56px;
    font-weight: 400;
    margin-bottom: 16px;
    color: white;
    letter-spacing: -1px;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
  
  p {
    font-size: 21px;
    line-height: 1.7;
    color: white;
    margin-top: 16px;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
  
  // Main homepage hero
  &:not(.hero--accommodation):not(.hero--rsvp):not(.hero--gifts) {
    min-height: 100vh;
    background-image: url('/homeHero.jpeg');
  }
  
  // Accommodation page hero
  &.hero--accommodation {
    background-image: url('/lieu.jpeg');
  }
  
  // Gifts page hero
  &.hero--gifts {
    background-image: url('/cagnote.jpeg');
  }
  
  // RSVP page hero
  &.hero--rsvp {
    background-image: url('/rsvpHero2.jpeg');
  }
}

// Buttons
.btn {
  background: black;
  color: white;
  border: none;
  padding: 16px 40px;
  border-radius: 0;
  font-size: 16px;
  font-weight: 400;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  cursor: pointer;
  text-decoration: none;
  display: inline-block;
  transition: all 0.3s ease;
  
  &:hover {
    background: black;
    transform: translateY(-1px);
  }
}

.btn-rsvp {
  background: black;
  color: white;
  border: none;
  padding: 13px 32px;
  border-radius: 3px;
  font-weight: 400;
  font-size: 16px;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  cursor: pointer;
  text-decoration: none;
  display: inline-block;
  transition: all 0.3s ease;
  
  &:hover {
    background: black;
    transform: translateY(-1px);
  }
}

.action-button {
  background: white;
  color: black;
  border: none;
  padding: 19px 32px;
  border-radius: 0;
  font-size: 16px;
  font-weight: 500;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  cursor: pointer;
  text-decoration: none;
  display: inline-block;
  transition: all 0.3s ease;
  line-height: 1.7;
  
  &:hover {
    background: black;
    color: white;
    transform: translateY(-1px);
  }
}

// Form Elements
.form-field {
  margin-bottom: 40px;
  
  &__label {
    display: block;
    margin-bottom: 13px;
    font-weight: 400;
    color: black;
    font-size: 16px;
  }
  
  &__input,
  &__textarea,
  &__select {
    width: 100%;
    padding: 16px;
    border: 1px solid var(--border-color);
    border-radius: 0;
    font-size: 16px;
    background: rgba(255, 255, 255, 0.8);
    transition: border-color 0.3s ease;
    
    &:focus {
      outline: none;
      border-color: black;
    }
  }
  
  &__textarea {
    resize: vertical;
    min-height: 120px;
    line-height: 1.6;
  }
  
  &__radio-group {
    display: flex;
    gap: 48px;
    margin-top: 16px;
    
    label {
      display: flex;
      align-items: center;
      gap: 13px;
      cursor: pointer;
      font-weight: 300;
      
      input[type="radio"] {
        width: auto;
        margin: 0;
        accent-color: black;
      }
    }
  }
  
  &__guest-count {
    display: flex;
    align-items: center;
    gap: 24px;
    flex-wrap: wrap;
    margin-top: 16px;
    
    select {
      width: auto;
      min-width: 100px;
      padding: 13px;
    }
    
    span {
      font-weight: 300;
    }
  }
}

// Item Cards
.item-card {
  background: rgba(255, 255, 255, 0.8);
  padding: 32px;
  margin-bottom: 32px;
  border-left: 3px solid black;
  transition: all 0.3s ease;
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.04);
  }
  
  h4 {
    color: black;
    font-size: 21px;
    font-weight: 400;
    margin-bottom: 16px;
  }
  
  address {
    font-style: normal;
    margin: 16px 0;
    line-height: 1.6;
    color: black;
  }
  
  .contact {
    margin: 16px 0;
    line-height: 1.6;
    color: black;
  }
  
  .note {
    font-weight: 600;
    color: black;
    font-size: 16px;
    margin-bottom: 8px;
    opacity: 0.6;
  }
  
  .rating {
    font-weight: 600;
    color: black;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.6;
  }
}

// Responsive Design
@media (max-width: 720px) {
  .header {
    padding: 16px 0;
    
    &__container {
      padding: 0 12px;
      flex-direction: column;
      gap: 12px;
    }
    
    &__nav {
      gap: 12px;
      order: 2;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    &__language {
      order: 1;
      gap: 6px;
    }
    
    &__link {
      font-size: 11px;
      padding-bottom: 4px;
      letter-spacing: 0.5px;
    }
    
    &__lang-btn {
      font-size: 10px;
      padding: 3px 6px;
    }

    &__couple {
      order: 0;
      margin-bottom: 8px;
    }
  }
  
  .hero {
    min-height: 65vh;
    padding: 80px 12px 40px;
    
    h1 {
      font-size: 36px;
      line-height: 1.1;
      margin-bottom: 20px;
    }
    
    p {
      font-size: 17px;
      line-height: 1.5;
      margin-top: 12px;
    }
  }
  
  .form-field {
    &__radio-group {
      flex-direction: column;
      gap: 16px;
    }
    
    &__guest-count {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }
  }
  
  .item-card {
    padding: 20px;
  }
  
  .btn-rsvp {
    padding: 8px 16px;
    font-size: 12px;
  }
  
  .action-button {
    padding: 16px 24px;
    font-size: 13px;
  }
}